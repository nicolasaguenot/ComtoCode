{% extends "ComtoCodeWebsiteBundle::pagelayout.html.twig" %}

{# Display specific title and meta tags in terms of current content #}
{% block meta %}

    {% if not ez_is_field_empty( content, "meta_title" ) %}
        {% set title = ez_field_value( content, "meta_title" ).text %}
    {% endif %}
    {% if not ez_is_field_empty( content, "meta_description" ) %}
       {% set meta_tags = meta_tags|merge( {"description": ez_field_value( content, "meta_description" ).text }) %}
    {% endif %}
    {{ parent() }}

{% endblock %}

{% block content %}

    {% include "ComtoCodeWebsiteBundle:include:bloc_intro.html.twig" %}

    <article id="skills-block" class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="row">
                    <header class="col-md-12 align-center header">
                        {# Skills title #}
                        {% if not ez_is_field_empty( content, "skills_title" ) %}
                            <h2>{{ ez_field_value( content, "skills_title" ) }}</h2>
                        {% endif %}
                        {# Skills intro #}
                        {% if not ez_is_field_empty( content, "skills_intro" ) %}
                            <div class="attribute-short">
                                {{ ez_render_field( content, "skills_intro" ) }}
                            </div>
                        {% endif %}
                    </header>

                    {# List of skills children of homepage - No limitations #}
                    {% if skills|length > 0 %}
                        <section id="skills-list" class="col-md-12 clearfix">
                            <div class="container">
                                <div class="row">
                                    {% for skill in skills %}

                                        <div class="col-md-4">
                                            {{ render_esi( controller( "ez_content:viewLocation", {
                                                    "locationId": skill.valueObject.contentInfo.mainLocationId,
                                                    "viewType": "block"
                                                    } )) }}
                                        </div>

                                    {% endfor %}
                                </div>
                                <div class="row">
                                    <div class="col-md-12 align-center button-block">

                                        <a href="{{ path( 'ez_urlalias', {'locationId': skillsParentNode} ) }}"
                                           title="{{ 'skills.discover'|trans }}">

                                            {{ 'skills.discover'|trans }}
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </section>
                    {% endif %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}
