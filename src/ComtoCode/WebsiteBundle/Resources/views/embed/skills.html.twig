{% extends viewbaseLayout %}
{% block content %}
    {% set title = ez_content_name( content ) %}

    <article class='block-skills container'>
        <div class="row">


            {% if align == "left" %}
                <div class="col-md-2 col-md-offset-2 left-content">

                    {% if not ez_is_field_empty( content, "icon_fa" ) %}
                        <span class="attribute-icon">
                            {% set icon_fa_class = "fa fa-5x "~ez_field_value(content, 'icon_fa') %}

                            <i class="{{ icon_fa_class }}"></i>
                        </span>
                    {% endif %}
                </div>
                <div class="col-md-6 left-content">
            {% else %}
                <div class="col-md-6 col-md-offset-2 right-content">
            {% endif %}
                <h3>
                    {{ title }}
                </h3>
                {% if not ez_is_field_empty( content, "content" ) %}
                    <div class="attribute-short">
                        {{ ez_render_field( content, "content" ) }}
                    </div>
                {% endif %}

            </div>
            {% if align == "right" %}
                <div class="col-md-2 right-content">

                    {% if not ez_is_field_empty( content, "icon_fa" ) %}
                        <span class="attribute-icon">
                            {% set icon_fa_class = "fa fa-5x "~ez_field_value(content, 'icon_fa') %}

                            <i class="{{ icon_fa_class }}"></i>
                        </span>
                    {% endif %}
                </div>

            {% endif %}
        </div>
    </article>


{% endblock %}